datasource DS {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = env("BINARY_TARGET")
}

model Recipe {
  id           Int      @default(autoincrement()) @id
  title        String
  ingredients  String
  instructions String
  yield        String
  source       String
  author       String
  notes        String
  isFavorite   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}
